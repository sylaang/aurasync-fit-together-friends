{
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/dist"
      }
    },
    {
      "src": "backend/backend/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "includeFiles": [
          "backend/requirements.txt",
          "backend/backend/**",
          "backend/manage.py"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/(frontend|build|static|images|assets)(.*)",
      "dest": "/frontend$2"
    },
    {
      "src": "/(.*)",
      "dest": "backend/backend/wsgi.py"
    }
  ]
}